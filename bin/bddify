#!/bin/bash

composify behat/behat "2.4.*@stable" --no-update --dev
composify behat/mink-extension "1.1.*" --no-update --dev
composify behat/mink-goutte-driver "1.0.*" --no-update --dev
composify phpspec/phpspec "2.0.*@dev" --no-update --dev

mv composer.json composer.json.old
cat composer.json.old | jq '. += {"config": {"bin-dir": "bin/"}}' > composer.json
rm -f composer.json.old

composify sensiolabs/behat-page-object-extension "*" --dev
